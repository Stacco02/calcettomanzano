# Configurazione per la cartella blog
RewriteEngine On

# Reindirizza index.html alla pagina news
RewriteRule ^index\.html$ ../news-2025.html [R=301,L]

# Forza il server a servire i file HTML come file statici
<Files "*.html">
    SetHandler default-handler
    ForceType text/html
</Files>

# Disabilita l'esecuzione di PHP
php_flag engine off
