# Gestisce i reindirizzamenti del blog
RewriteEngine On

# Reindirizza solo index.html senza parametri alla pagina news
RewriteCond %{QUERY_STRING} ^$
RewriteRule ^index\.html$ ../news-2025.html [R=301,L]

# Permette l'accesso agli articoli specifici (con parametri URL)
RewriteCond %{QUERY_STRING} ^(.+)$
RewriteRule ^index\.html$ index.html?%1 [L]

# Forza il server a servire i file HTML come file statici
<Files "*.html">
    SetHandler default-handler
    ForceType text/html
</Files>

# Disabilita l'esecuzione di PHP
php_flag engine off
