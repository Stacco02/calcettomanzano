# Disabilita completamente PHP e reindirizza tutto alla pagina news
RewriteEngine On

# Reindirizza TUTTO alla pagina news
RewriteRule ^.*$ ../news-2025.html [R=301,L]

# Forza il server a servire i file HTML come file statici
<Files "*.html">
    SetHandler default-handler
    ForceType text/html
</Files>

# Disabilita l'esecuzione di PHP
php_flag engine off
